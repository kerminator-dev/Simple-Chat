<ContentControl x:Class="Chat.Client.WPF.Views.Pages.ChatsPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:vm="clr-namespace:Chat.Client.WPF.ViewModels"
                xmlns:controls="clr-namespace:Chat.Client.WPF.Controls" 
                xmlns:pages="clr-namespace:Chat.Client.WPF.ViewModels.Pages" xmlns:i="http://metro.mahapps.com/winfx/xaml/iconpacks"
                d:DataContext="{d:DesignInstance Type=pages:ChatPageViewModel}"
                mc:Ignorable="d" 
                d:DesignHeight="450"
                d:DesignWidth="800">
    <ContentControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml"/>
                <ResourceDictionary Source="/Styles/Pages/ChatsPageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <LinearGradientBrush x:Key="ChatBackGradient" StartPoint="0.2,0" EndPoint="0.5,1">
                <GradientStop Color="#eef1fb" Offset="0"/>
                <GradientStop Color="#e6e4fa" Offset="0.8"/>
                <GradientStop Color="#d1ddfb" Offset="0.9"/>
                <GradientStop Color="#e2d7f6" Offset="1"/>
                
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="SelectedChatBackGradient" StartPoint="0.2,0" EndPoint="0.5,1">
                <GradientStop Color="#eef1fb" Offset="0"/>
                <GradientStop Color="#e6e4fa" Offset="0.8"/>
                <GradientStop Color="#d1ddfb" Offset="0.9"/>
                <GradientStop Color="#e2d7f6" Offset="1"/>

            </LinearGradientBrush>
        </ResourceDictionary>
    </ContentControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250" Width="250" MaxWidth="350"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#ffffff"
                Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.Column="1"
                    Margin="15 15 15 10"
                    VerticalAlignment="Top"
                    MinWidth="200"
                    HorizontalAlignment="Stretch"
                    >
                    <controls:IconTextBoxControl CornerRadius="12" 
                                                 IconSize="16" 
                                                 FontSize="16" 
                                                 Padding="10 6"
                                                 Icon="magnify"
                                                 Foreground="#abaeb1" 
                                                 IconForeground="#abaeb1" 
                                                 Background="#f5f5f5" 
                                                 HorizontalAlignment="Stretch" />
                    
                </Border>


                <!--<controls:ChatList Grid.Row="1" DataContext="{Binding ChatList}"/>-->
                <ListBox
                    Grid.Row="1" 
                    BorderThickness="0"
                    ItemsSource="{Binding Chats}"
                    ItemContainerStyle="{StaticResource ListBoxItemStyle}">

                </ListBox>

            </Grid>
        </Border>

        <GridSplitter Grid.Column="1"
                  Background="#ffffff" 
            
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Stretch" />

        <Grid Grid.Column="2" Background="{StaticResource ChatBackGradient}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition MinHeight="40" Height="auto"/>
            </Grid.RowDefinitions>
            <ListBox Background="Transparent"
                         Grid.Row="1"   
                         BorderThickness="0">

                    <controls:Message Margin="20 10" IsFromMe="True" Text="fsagaSHHSGGAGAsg" Foreground="White" Background="#778beb" Time="14:04" TimeForeground="White" SecondaryBackground="#556ee6"/>
                    <controls:Message Margin="20 10" FontSize="16" IsFromMe="False" Text="fsagasg" Background="White" Foreground="Gray" Time="14:04" TimeForeground="#FF949494" SecondaryBackground="#FFECECEC"/>
                <controls:Message Margin="20 10" IsFromMe="True" Text="fsaDFAFSAGSAHGSHAgaSHHSGGAGAsgfsaDFAFSGAsg" Foreground="White" Background="#778beb" Time="14:04" TimeForeground="White" SecondaryBackground="#556ee6"/>
                </ListBox>

            <StackPanel Orientation="Vertical"
                        Grid.Row="0">
                <Border HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Background="White">
                    <TextBlock HorizontalAlignment="Left"
                               Text="Username"
                               VerticalAlignment="Center"
                               Margin="15"
                               FontSize="24"
                               Foreground="Gray"/>
                </Border>
                <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="10" Opacity="1">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFD0D0D0" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </StackPanel>
            
            <Border VerticalAlignment="Bottom"
                    Grid.Row="2"   
                    Height="auto"
                    MaxHeight="200"
                    Background="White"
                    CornerRadius="20"
                    
                    Margin="20 20 20 15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                                      ShadowDepth="4"
                                      Color="#FFDEDEDE"
                                      Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <i:PackIconMaterial VerticalAlignment="Center" 
                                        Grid.Column="0"
                                        Name="Icon"
                                        HorizontalAlignment="Center"
                                        Margin="10 0 0 0"
                                        Padding="0 0 0 0"
                                        Kind="LinkVariant" 
                                        Foreground="Gray"
                                        Height="24" Width="24" />
                    
                    <TextBox Grid.Column="1"
                             Style="{StaticResource MultilineTextBox}"/>

                    <Button Grid.Column="2"
                            Margin="4 4"
                            Width="60"
                            VerticalAlignment="Top"
                            FontSize="15"
                            Height="33"
                            Foreground="White"
                            Name="btnSaveEditedText" 
                            Background="#5c82ff">
                        Send
                    </Button>
                </Grid>
                
            </Border>
        </Grid>

    </Grid>
</ContentControl>
